[includeIf "gitdir:~/"]
	path = ~/.gitconfig-home
[includeIf "gitdir:~/Dev/"]
  path = ~/.gitconfig-dev
[includeIf "gitdir:~/Work/"]
  path = ~/Work/.gitconfig-work
[commit]
	gpgsign = true
[init]
	defaultBranch = main
[pull]
	rebase = false
[core]
	editor = nvim
[fetch]
  prune = true
[credential]
  helper = libsecret
[safe]
	directory = /home/omary/sdcard/.dotfiles
[maintenance]
	repo = /home/omary/.dotfiles
	repo = /home/omary/Dev/Org
