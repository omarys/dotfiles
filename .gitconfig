[includeIf "gitdir:~/"]
	path = ~/.gitconfig-home
[includeIf "gitdir:~/Dev/"]
  path = ~/.gitconfig-dev
[includeIf "gitdir:~/Work/"]
  path = ~/Work/.gitconfig-work
[commit]
	gpgsign = true
  verbose = true
[core]
	editor = nvim
  pager = delta 
	autocrlf = input
[interactive]
  diffFilter = delta --color-only --features=interactive
[delta]
  navigate = true
  light = false
  side-by-side = true
  line-numbers = true
  features = decorations
[delta "interactive"]
  keep-plus-minus-markers = true
[delta "decorations"]
  commit-decoration-style = blue ol
  comit-style = raw
  file-style = omit
  hunk-header-decoration-style = blue box
  hunk-header-file-style = red
  hunk-header-style = file line-number syntax
[fetch]
  prune = true
[init]
	defaultBranch = main
[maintenance]
	repo = /home/omary/.dotfiles
	repo = /home/omary/Dev/Org
[merge]
  conflictstyle = zdiff3
[diff]
  colorMoved = default
[pull]
	rebase = false
[rebase]
  autostash = true
[credential]
	helper = libsecret
[rerere]
	enabled = true
